# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeKLists(self, lists: List[Optional[ListNode]]) -> Optional[ListNode]:
        if lists==None or len(lists)==0:
            return None
        
        while (len(lists)!=1):
            mergelist=[]
            for i in range(1,len(lists),2):
                mergelist.append(self.merge2Lists(lists[i],lists[i-1]))
            if len(lists)%2==1:
                mergelist.append(lists[len(lists)-1])
            lists=mergelist #shallow copy. which is fine
        return lists[0]

    def merge2Lists(self,l1,l2):
        if l1==None:
            return l2
        if l2==None:
            return l1
        dummy=ListNode(0)
        dummy.next=None
        p=dummy
        while (l1!=None or l2!=None):
            if (l1==None):
                p.next=l2
                return dummy.next
            elif (l2==None):
                p.next=l1
                return dummy.next
            if l1.val>l2.val:
                p.next=l2
                l2=l2.next
                p=p.next
                p.next=None
            else: 
                p.next=l1
                l1=l1.next
                p=p.next
                p.next=None
        return dummy.next
