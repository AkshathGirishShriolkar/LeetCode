# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def reorderList(self, head: Optional[ListNode]) -> None:

        slow=head
        fast=head
        end=None
        while (fast.next!=None and (fast.next).next!=None):
            slow=slow.next
            fast=fast.next.next
        r=slow.next
        slow.next=None

        #call the function
        d=ListNode()
        d.next=None
        p=r
        while p!=None:
            temp=d.next
            d.next=p
            arr=p.next
            p.next=temp
            p=arr
        r=d.next
        
        p=head
        ch=head.next
        while ch!=None:
            p.next=r
            p=p.next
            r=r.next
            p.next=ch
            p=p.next
            ch=ch.next
        if r!=None:
            p.next=r
            
        #return dum.next

    
